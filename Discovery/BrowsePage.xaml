<?xml version="1.0" encoding="utf-8" ?>
<backdrop:SfBackdropPage
    x:Class="Discovery.BrowsePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:backdrop="clr-namespace:Syncfusion.XForms.Backdrop;assembly=Syncfusion.SfBackdrop.XForms"
    xmlns:local="clr-namespace:Discovery.ViewModels"
    xmlns:syncfusion="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    Title="Menu"
    BackLayerRevealOption="Auto"
    Background="Black"
    IsBackLayerRevealed="False">

    <ContentPage.BindingContext>
        <local:BrowsePageViewModel x:Name="browsePageViewModel" />
    </ContentPage.BindingContext>

    <backdrop:SfBackdropPage.BackLayer>
        <backdrop:BackdropBackLayer BackgroundColor="Black">
            <StackLayout>
                <ListView
                    ItemSelected="ListView_ItemSelected"
                    SelectedItem="1"
                    SelectionMode="Single">
                    <ListView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Home</x:String>
                            <x:String>Browse</x:String>
                            <x:String>Favourites</x:String>
                        </x:Array>
                    </ListView.ItemsSource>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding .}" TextColor="White" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </backdrop:BackdropBackLayer>
    </backdrop:SfBackdropPage.BackLayer>
    <backdrop:SfBackdropPage.FrontLayer>
        <backdrop:BackdropFrontLayer>
            <Grid BackgroundColor="White" VerticalOptions="FillAndExpand">

                <!--  Page content  -->
                <syncfusion:SfListView
                    x:Name="dataListView"
                    AutoFitMode="DynamicHeight"
                    IsScrollBarVisible="False"
                    ItemSpacing="5,5,5,5"
                    ItemsSource="{Binding Photos}">
                    <syncfusion:SfListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Grid
                                        BackgroundColor="White"
                                        HorizontalOptions="FillAndExpand"
                                        RowSpacing="0"
                                        VerticalOptions="FillAndExpand">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30" />
                                            <RowDefinition Height="60" />
                                            <RowDefinition Height="30" />
                                            <RowDefinition Height="30" />
                                            <RowDefinition Height="30" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Column 1  -->

                                        <Frame
                                            Grid.Row="0"
                                            Grid.RowSpan="5"
                                            Grid.Column="0"
                                            Margin="3.5,1.5,0,0"
                                            Padding="0"
                                            BackgroundColor="White"
                                            BorderColor="Transparent"
                                            CornerRadius="10">
                                            <Image
                                                Aspect="AspectFill"
                                                Source="{Binding Url}"
                                                WidthRequest="120" />
                                        </Frame>

                                        <!--  Column 2  -->
                                        <Image
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="3.5,1.5,0,0"
                                            Aspect="AspectFill"
                                            HorizontalOptions="Center"
                                            Source="https://cdn-icons-png.flaticon.com/64/1077/1077114.png"
                                            VerticalOptions="Center" />

                                        <Image
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="3.5,1.5,0,0"
                                            Aspect="AspectFill"
                                            HorizontalOptions="Center"
                                            Source="https://cdn-icons-png.flaticon.com/64/3033/3033215.png"
                                            VerticalOptions="Start" />

                                        <Image
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="3.5,1.5,0,0"
                                            Aspect="AspectFill"
                                            HorizontalOptions="Center"
                                            Source="https://cdn-icons-png.flaticon.com/64/1237/1237946.png"
                                            VerticalOptions="Center" />

                                        <Image
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="3.5,1.5,0,0"
                                            Aspect="AspectFill"
                                            HorizontalOptions="Center"
                                            Source="https://cdn-icons-png.flaticon.com/64/56/56889.png"
                                            VerticalOptions="Center" />

                                        <Image
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Margin="3.5,1.5,0,0"
                                            Aspect="AspectFill"
                                            HorizontalOptions="Center"
                                            Source="https://cdn-icons-png.flaticon.com/64/2810/2810390.png"
                                            VerticalOptions="Center" />

                                        <!--  Column 3  -->

                                        <Label
                                            Grid.Column="2"
                                            Margin="5,0"
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            HorizontalOptions="Start"
                                            HorizontalTextAlignment="Start"
                                            Text="{Binding Photographer}"
                                            TextColor="Black"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Margin="5,0"
                                            FontSize="16"
                                            HorizontalOptions="Start"
                                            HorizontalTextAlignment="Start"
                                            Text="{Binding Alt}"
                                            TextColor="Black"
                                            VerticalOptions="Start"
                                            VerticalTextAlignment="Start" />

                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="2"
                                            Margin="5,0"
                                            FontSize="16"
                                            HorizontalOptions="Start"
                                            HorizontalTextAlignment="Start"
                                            Text="Add to Favourites"
                                            TextColor="Black"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <Label
                                            Grid.Row="3"
                                            Grid.Column="2"
                                            Margin="5,0"
                                            FontSize="16"
                                            HorizontalOptions="Start"
                                            HorizontalTextAlignment="Start"
                                            Text="Add to Blacklist"
                                            TextColor="Black"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <Label
                                            Grid.Row="4"
                                            Grid.Column="2"
                                            Margin="5,0"
                                            FontSize="16"
                                            HorizontalOptions="Start"
                                            HorizontalTextAlignment="Start"
                                            Text="Download image"
                                            TextColor="Black"
                                            VerticalTextAlignment="Center" />
                                    </Grid>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </syncfusion:SfListView.ItemTemplate>
                </syncfusion:SfListView>

